<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="well">
				<div class="user-avatar">
					<%= image_tag @user.avatar.url(:small), class: "avatar-normal" %>
				</div>
				<h2><%= @user.name %></h2>
				<div class="text-align: center">
					<%= render 'follow_form'%>
				</div>
			</div>

			<div class="well">
				<%= render 'shared/stats'%>
			</div>
		</div> <!-- col-md-4 -->

  	<div class="col-md-6">
			<div class="well">
				<%= form_for(@micropost) do |f| %>
					<div class="form-group">
						<%= f.text_area :content, rows: 5, placeholder: "Compose new micropost...", class: "form-control"%>
					</div>
					<%= f.submit "Post", class: "btn btn-success pull-right" %>
				<% end %> <!-- end of form_for @micropost -->
				<br>
			</div> <!-- well -->

			<% if @microposts.any? %>
				<div class="well">
					<div id="microposts">
						<%= render 'microposts', object: @microposts %>
					</div> <!-- div microposts -->	
					<div id="paginator" class="pull-right">
						<%= paginate @microposts, remote: true %>
					</div>
				</div> <!-- well -->
			<% end %> <!-- end of @microposts.any? -->
		</div> <!-- col-md-6 -->



	</div> <!-- row -->
</div> <!-- container -->






