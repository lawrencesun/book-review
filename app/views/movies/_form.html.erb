<div class="well">
	<%= form_for @movie do |f| %>
		<%= render 'layouts/error', object: @movie %>
		
		<div class="form-group">
			<%= f.label "name" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "director" %>
			<%= f.text_field :director, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "writers" %>
			<%= f.text_field :writers, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "stars" %>
			<%= f.text_field :stars, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "year" %>
			<%= f.text_field :time, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "description" %>
			<%= f.text_area :description, rows: 10, class: "form-control" %>
 		</div>

		<div class="form-group">
			<%= f.label "cover" %>
			<%= f.file_field :photo %>
		</div>

		<%= f.submit(@movie.new_record? ? "create" : "update", class: "btn btn-success") %>
	<% end %>
</div>