<div class="well">
	<%= form_for @video do |f| %>
		<%= render 'layouts/error', object: @video %>
		
		<div class="form-group">
			<%= f.label "title" %>
			<%= f.text_field :title, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "url" %>
			<%= f.text_field :url, class: "form-control", placeholder: "Flash Address on Youku" %>
		</div>

		<%= f.submit(@video.new_record? ? "create" : "update", class: "btn btn-success") %>
	<% end %>
</div>