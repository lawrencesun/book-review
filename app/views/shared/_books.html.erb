<% object.each do |book| %>
	<table class="books-index">
		<tr class="books-index">
			<td class="cover">
				<span class="pull-left"><%= qiniu_image_tag book.photo.url, :thumbnail => '106x158!', :quality => 80 %></span>
			</td>

			<td class="content">
				<header>
					<span class="badge pull-right"><%= book.comments_count %></span>
					<h4><%= link_to "#{book.name}", book_path(book) %></h4>
					<small>Author: &nbsp;<%= book.author %></small><br>
				</header>
	  	</td>
		</tr>
	</table>
<% end %> <!-- object -->