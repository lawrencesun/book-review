<%= form_for [@postable, @post] do |f| %>
	<%= render 'layouts/error', object: @post %>
	<div class="form-group">
		<%= f.label "title"%>
		<%= f.text_area :title, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "content"%>
		<%= f.text_area :body, rows: 10, class: "form-control" %>
	</div>
	<%= f.submit(@post.new_record? ? "create" : "update", class: "btn btn-success") %>
<% end %>