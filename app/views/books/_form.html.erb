<div class="well">
	<%= form_for @book do |f| %>
		<%= render 'layouts/error', object: @book %>
		
		<div class="form-group">
			<%= f.label "name" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "author" %>
			<%= f.text_field :author, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "description" %>
			<%= f.text_area :description, rows: 10, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "cover" %>
			<%= f.file_field :photo %>
		</div>

		<div class='form-group'>
      <%= f.label "Select Category" %><br>
     	<%= f.select :category_ids, Category.all.collect{|c| [c.name, c.id]}, {}, {multiple: false} %>
    </div>

		<%= f.submit(@book.new_record? ? "create" : "update", class: "btn btn-success") %>
	<% end %>
</div>