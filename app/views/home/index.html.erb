<div class="container">
	<div class="row">

		<div class="col-md-6">
			<div class="well">
				<h4>Latest Topics</h4><hr>
				<% @topics.each do |topic| %>
					<span class="badge pull-right"><%= topic.comments_count %></span>
					<p><%= link_to "#{topic.title}", topic_path(topic) %></p><hr>
				<% end %>
			</div> <!-- well -->
		</div> <!-- col-md-6 -->

		<div class="col-md-6">
			<div class="well">
				<h4>Latest Comments</h4><hr>
				<% @comments.each do |comment| %>
					<table class="comments">
					<tr class="comments">
						<td class="avatar">
							<span class="pull-left"><%= qiniu_image_tag comment.user.avatar.url, :thumbnail => '64x64!', :quality => 80, class: "avatar-normal" %></span>
						</td>

						<td class="content">
							<p><%= link_to markdown(comment.body), [comment.commentable, comment] %></p>
						</td> <!-- td content-->
					</tr>
					</table>
				<% end %>
			</div> <!-- well -->
		</div> <!-- col-md-6 -->

	</div> <!-- row -->
</div> <!-- container -->



