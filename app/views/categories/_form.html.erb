<%= render 'layouts/error', object: @category %>
<div class="well">
	<div class="offset3">
	<%= form_for @category do |f| %>
		<div class="control-group">
			<%= f.label "new category" %>
			<%= f.text_field :name %>
		</div>
		<div class="control-group">
			<%= f.submit "create", class: "btn btn-primary" %>
		</div>
	<% end %>
	</div>
</div>